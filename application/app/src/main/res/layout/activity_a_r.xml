<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/aractivity_constraint_layout"
    tools:context=".ARActivity">

    <Button
        android:id="@+id/menu_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_labels_button"
        app:layout_constraintBottom_toTopOf="@id/ux_fragment"
        app:layout_constraintEnd_toStartOf="@id/menu_resense_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menu_resense_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_button_sense"
        app:layout_constraintBottom_toTopOf="@id/ux_fragment"
        app:layout_constraintEnd_toStartOf="@id/menu_save_button"
        app:layout_constraintStart_toEndOf="@id/menu_spinner"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menu_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_button_save"
        app:layout_constraintBottom_toTopOf="@id/ux_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/menu_resense_button"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/ux_fragment"
        android:name="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_spinner" />

</androidx.constraintlayout.widget.ConstraintLayout>